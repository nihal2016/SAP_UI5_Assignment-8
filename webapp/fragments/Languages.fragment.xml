<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="Languages">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Close" press="handleActionPress"/>
			</OverflowToolbar>
		</footer>
		<List items="{/Languages}">
			<StandardListItem title="{language}"/>
		</List>
	</Popover>
</core:FragmentDefinition>